@page
@model FirstLoginModel

@{
    ViewData["Estilo"] = "/css/first-login.css";
    ViewData["EstiloC"] = "/css/singup.css";
    ViewData["Title"] = "PrimerIngreso";
}

    <div class="container">
        <div class="formulario">
            <div class="f_div">
                <form id="changepass" method="POST">
                    <input id="cc" type="txt" asp-for="Empleado.Cedula" placeholder="Ingrese su Identificacion" required/>
                    <input id="psw" type="password" asp-for="Empleado.Password" placeholder="Nueva contraseña" required>
                    <input id="psw2" type="password"  placeholder="Repita la contraseña" required>
                    <label for="changepass">*Digite su nombre de usuario</label>
                    <button type="submit" id="enviar"></button>
                </form>
                <button type="submit" value="" form="changepass">
                    <!-- <input type="submit" form="changepass"> -->
                    <div class="btn-svg-singup" id="OnClick_">
                    </div>
                </button>
            </div>
            <div class="warning">
                <img src="~/img/warning.svg" alt="">
                <p class="tit"><b>Primer Ingreso</b></p>
                <p class="tit_txt">Esta es la primera vez que ingresas al Sistema, porfavor cambia tu contraseña</p>
            </div>
            <div class="menu">
                <a href="./first-login.html"><p class="txt_action active">¡Cambia tu contraseña!</p></a>
            </div>
        </div>
    </div>


@section Scripts{
    <partial name = "_ValidationScriptsPartial"/>
    <script>
        document.getElementById("OnClick_").onclick=()=>{
            if(document.getElementById("psw").value===document.getElementById("psw2").value){
            @* document.getElementById("enviar").click(); *@
            }else{
            }
        }


    </script>
}